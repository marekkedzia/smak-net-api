{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "ignore",
  "controllerPathGlobs": ["src/**/*controller.ts"],
  "spec": {
    "outputDirectory": "dist/docs",
    "specVersion": 3,
    "specFileBaseName": "api.client",
    "securityDefinitions": {
      "jwt": {
        "type":"apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "build"
  }
}
